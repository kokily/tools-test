{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["src"],
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}